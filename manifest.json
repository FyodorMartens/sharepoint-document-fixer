{
  "manifest_version": 3,
  "name": "SharePoint Document View Fixer",
  "version": "1.0",
  "description": "Fixes SharePoint document view issues when opening from email or Teams",
  "permissions": [
    "tabs",
    "webNavigation",
    "*://*.sharepoint.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
} 